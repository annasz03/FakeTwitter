<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/kep"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/avi" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/kep"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/kep"
            android:text="nev"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/kep"
            android:text="test"
            android:textSize="15dp" />


        <LinearLayout
            android:id="@+id/linearl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/test"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingBottom="3dp">

            <ImageButton
                android:id="@+id/likebutton"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:onClick="liking"
                android:scaleType="fitCenter"
                android:src="@drawable/like2"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8dp"
                android:text="like"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/commentbutton"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:src="@drawable/comment"
                android:onClick="commenting" />

            <TextView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8dp"
                android:text="comment"
                android:textSize="15dp"
                android:textColor="#808080"
                />

            <ImageView
                android:id="@+id/retweetbutton"
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:src="@drawable/retweet"
                android:onClick="retweeting" />

            <TextView
                android:id="@+id/retweet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="retweet"
                android:textSize="15dp"
                android:textColor="#808080"/>
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/linearl"
            android:background="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/bin"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:onClick="torles"
            android:visibility="gone"
            app:srcCompat="@drawable/bin" />

        <ImageView
            android:id="@+id/pen"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginRight="30dp"
            android:onClick="showUpdateDialog"
            android:visibility="gone"
            app:srcCompat="@drawable/pen" />

        <ImageView
            android:id="@+id/kep2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/linearl"
            android:layout_below="@id/test"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
